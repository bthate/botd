#!/usr/bin/python3 -u
# BOTD - IRC channel daemon serving 24/7 in the background
#
# bin/botd (bot daemon)

__version__ = 83

import lo
import os

from lo import Kernel, execute, level

def main():
    lo.workdir = "/var/lib/botd"
    level("debug", "/var/log/botd/bot.log")
    k = Kernel()
    k.start()
    k.wait()
    
execute(main)
os._exit(0)
