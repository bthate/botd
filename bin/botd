#!/usr/bin/python3 -u
# BOTD - python3 IRC channel daemon.
#
# bin/botd

__version__ = 1

import os, sys ; sys.path.insert(0, os.getcwd())

import logging

from botd.err import EINIT
from botd.krn import Kernel
from botd.shl import parse_cli
from botd.trc import get_exception
from botd.trm import termreset, termsave

def daemon():
    pid = os.fork()
    if pid != 0:
        termreset()
        os._exit(0)
    os.setsid()
    os.umask(0)
    si = open("/dev/null", 'r')
    so = open("/dev/null", 'a+')
    se = open("/dev/null", 'a+')
    os.dup2(si.fileno(), sys.stdin.fileno())
    os.dup2(so.fileno(), sys.stdout.fileno())
    os.dup2(se.fileno(), sys.stderr.fileno())

def main():
    parse_cli("botd", __version__)
    daemon()
    k = Kernel()
    k.cfg.last()
    k.start()
    k.wait()

def execute(main):
    termsave()
    try:
        main()
    except KeyboardInterrupt:
        print("")
    except botd.err.EINIT:
        pass
    except PermissionError:
        print("you need root permissions.")
    except Exception:
        logging.error(get_exception())
    finally:
        termreset()

try:
    execute(main)
except PermissionError:
    sys.stdout.write("you need root to run botd.\n")
    sys.stdout.sync()

os._exit(0)
