#!/usr/bin/python3

import os, sys

from hdl import Handler
from prs import parse_cli
from trm import execute, termreset

def daemon():
    pid = os.fork()
    if pid != 0:
        termreset()
        os._exit(0)
    os.setsid()
    os.umask(0)
    si = open("/dev/null", 'r')
    so = open("/dev/null", 'a+')
    se = open("/dev/null", 'a+')
    os.dup2(si.fileno(), sys.stdin.fileno())
    os.dup2(so.fileno(), sys.stdout.fileno())
    os.dup2(se.fileno(), sys.stderr.fileno())

def main():
    import obj
    obj.wd = "/var/lib/botd"
    daemon()
    h = Handler()
    h.start()
    h.scan("irc")
    h.init("irc,udp,rss")
    h.wait()
     
execute(main)
os._exit(0)
