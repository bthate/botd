#!/usr/bin/python3 -u
# BOTD - python3 IRC channel daemon.
#
# bin/bot 

__version__ = 1

import os, sys ; sys.path.insert(0, os.getcwd())

import bl
import logging

from bl import Kernel, execute, kernels, parse_cli

opts = [
    ('-d', '--datadir', 'store', str, "", 'set working directory.', 'workdir'),
    ('-m', '--modules', 'store', str, "", 'modules to load.', 'modules'),
    ('-o', '--options', "store", str, "", "options to use.", 'options'),
    ('-p', '--prompting', "store_true", bool, "prompt for initial values.", 'prompting'),
    ('-l', '--loglevel', 'store', str, "", 'set loglevel.', 'level'),
    ('-a', '--logdir', "store", str, "", "directory to find the logfiles.", 'logdir'),
]

k = Kernel()

def cmds(event):
    event.reply(",".join([x for x in k.cmds]))

def main():
    parse_cli("botd", __version__, opts)
    k.register("cmds", cmds)
    k.start()
    k.wait()

execute(main)
os._exit(0)
