#!/usr/bin/python3

import os, sys ; sys.path.insert(0, os.path.join(os.getcwd(), "lib"))
import time, unittest

import obj, hdl

from trm import execute
from prs import parse_cli

def open(txt):
    try:
        for line in os.popen(txt).readlines():
            print(line.rstrip())
    except:
        pass

def main():
    open("rm -fR ~/.test")
    obj.wd = os.path.expanduser("~/.test")
    hdl.debug = True
    cfg = parse_cli()
    test_path = os.getcwd() + os.sep + "test"
    if cfg.txt:
        pat = "test_%s*" % k.cfg.txt
    else:
        pat = "test*"
    suite = unittest.loader.TestLoader().discover(test_path, pattern=pat)
    unittest.TextTestRunner(verbosity=3).run(suite)
   
execute(main)
os._exit(0)
