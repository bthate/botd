#!/usr/bin/python3
# BOTD - 24/7 channel daemon
#
# this file is placed in the public domain

"botd unittests"

# imports

import os, sys ; sys.path.insert(0, os.getcwd())

import time
import unittest

import bot.all
import bot.obj
import bot.hdl

from bot.trm import execute
from bot.prs import parse_cli

# defines

test_path = os.getcwd() + os.sep + "test"
wd = os.path.expanduser("~/.test")

# functions

def open(txt):
    try:
        for line in os.popen(txt).readlines():
            print(line.rstrip())
    except:
        pass

def main():
    open("rm -fR ~/.test")
    bot.hdl.debug = True
    cfg = parse_cli(wd)
    if cfg.txt:
        pat = "test_%s*" % cfg.txt
    else:
        pat = "test*"
    suite = unittest.loader.TestLoader().discover(test_path, pattern=pat)
    unittest.TextTestRunner(verbosity=3).run(suite)

# runtime

execute(main)
os._exit(0)
