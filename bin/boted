#!/usr/bin/python3 -u
# BOTD - IRC channel daemon serving 24/7 in the background
#
# bin/boted (bot editor)

__version__ = 1

import lo
import os
import sys

from lo import Kernel, execute

def main():
    lo.workdir = "/var/lib/botd"
    k = Kernel()
    k.walk("bot.mods.ed")
    k.cmd("ed %s" % " ".join(sys.argv[1:]))
                 
execute(main)
os._exit(0)
