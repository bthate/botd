#!/usr/bin/env python3
# BOTD - IRC channel daemon serving 24/7 in the background
#
# bin/botctl (bot control)

import lo, os, sys

def main():
    lo.workdir = "/var/lib/botd"
    k = lo.Kernel()
    k.walk("bot.mods")
    k.cmd(" ".join(sys.argv[1:]))
                 
lo.execute(main)
os._exit(0)
