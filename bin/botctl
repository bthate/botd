#!/usr/bin/python3 -u
# BOTLIB - Framework to program bots.
#
# bin/botctl (run command on the system bot)

import bot
import lo
import logging
import os
import sys
import time

from bot.krn import Kernel
from lo.csl import Console
from lo.shl import daemon, execute, parse_cli

def main():
    lo.workdir = "/var/lib/botd"
    k = Kernel()
    mods = k.walk("bot")
    k.scan(mods)
    k.cmd(" ".join(sys.argv[1:]))
    
execute(main)
os._exit(0)
