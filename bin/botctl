#!/usr/bin/python3 -u
# BOTLIB - Framework to program bots.
#
# bin/botctl (bot control)

import lo
import os
import sys

#sys.path.insert(0, os.getcwd())

from bot.krn import Kernel
from lo.shl import execute, level

def main():
    lo.workdir = "/var/lib/botd"
    k = Kernel()
    mods = k.walk("bot.shw")
    k.scan(mods)
    k.init(mods)
    k.cmd(" ".join(sys.argv[1:]))

execute(main)
os._exit(0)
